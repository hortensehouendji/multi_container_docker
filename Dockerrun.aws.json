{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "hortensehouendji/multi-container-client",
            "hostname": "client",
            "essential": false
        },

        {
            "name": "server",
            "image": "hortensehouendji/multi-container-server",
            "hostname": "api",
            "essential": false
        },

        {
            "name": "worker",
            "image": "hortensehouendji/multi-container-worker",
            "hostname": "worker",
            "essential": false
        },

        {
            "name": "nginx",
            "image": "hortensehouendji/multi-container-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":["client", "server"]
        }
    ]

}